#include <stdio.h>
int n=0,_contfat=0;
double fatorial (double n)//calculado via recursão
{
	_contfat++;//contagem das chamadas recursivas
	if (n < 2)//caso infantil
		return 1;
	else
		return n * fatorial(n-1);
}
main()
{
	
	while (n<101)
	{
		fatorial(n);//executando a função fatorial
		printf("\nN = %.0lf\nFatorial = %.0lf\nNumero de chamadas = %d\n\n",n,fatorial(n),_contfat);
		_contfat=0;
		n+=10;
	}
}
